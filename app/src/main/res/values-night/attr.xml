<?xml version="1.0" encoding="utf-8"?>


<resources xmlns:tools="http://schemas.android.com/tools">
    <attr name="min_value_ruler" format="integer" tools:ignore="MissingDefaultResource" />
    <attr name="max_value_ruler" format="integer" tools:ignore="MissingDefaultResource"/>

    <attr name="long_height_height_ratio" format="fraction" tools:ignore="MissingDefaultResource"/>
    <attr name="short_height_height_ratio" format="fraction" tools:ignore="MissingDefaultResource"/>

    <attr name="ruler_text_color" format="color" tools:ignore="MissingDefaultResource"/>
    <attr name="ruler_text_size" format="dimension" tools:ignore="MissingDefaultResource"/>

    <attr name="indicator_interval" format="dimension" tools:ignore="MissingDefaultResource"/>
    <attr name="indicator_color" format="color" tools:ignore="MissingDefaultResource"/>
    <attr name="indicator_width" format="dimension" tools:ignore="MissingDefaultResource"/>

    <attr name="notch_color" format="color" tools:ignore="MissingDefaultResource"/>

    <declare-styleable name="RulerView">
        <attr name="min_value" />
        <attr name="max_value" />

        <attr name="long_height_height_ratio" />
        <attr name="short_height_height_ratio" />

        <attr name="ruler_text_color" />
        <attr name="ruler_text_size" />

        <attr name="indicator_interval" />
        <attr name="indicator_color" />
        <attr name="indicator_width" />
    </declare-styleable>

    <declare-styleable name="RulerValuePicker">

        <attr name="min_value_ruler" />
        <attr name="max_value_ruler" />

        <attr name="long_height_height_ratio" />
        <attr name="short_height_height_ratio" />

        <attr name="ruler_text_color" />
        <attr name="ruler_text_size" />

        <attr name="indicator_interval" />
        <attr name="indicator_color" />
        <attr name="indicator_width" />

        <!-- Color of the top notch -->
        <attr name="notch_color" />
    </declare-styleable>

    <declare-styleable name="simpleRulerView">
        <attr name="highlightColor" format="color|reference" />
        <attr name="rulerColor" format="color|reference" />
        <attr name="textColor" format="color|reference" />
        <attr name="intervalDistance" format="dimension" />
        <attr name="intervalValue" format="float" />
        <attr name="maxValue" format="float" />
        <attr name="minValue" format="float" />
        <attr name="textSize" format="dimension" />
        <attr name="rulerLineWidth" format="dimension" />
        <attr name="retainLength" format="integer"/>
    </declare-styleable>
    <declare-styleable name="SearchableSpinner">
        <attr name="hintText" format="string"/>
    </declare-styleable>
</resources>